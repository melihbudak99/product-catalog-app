{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=~/data/products.db;Cache=Shared;Pooling=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
      "Microsoft.AspNetCore.ResponseCaching": "Warning",
      "Microsoft.AspNetCore.StaticFiles": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/app-{Date}.log",
      "LogLevel": {
        "Default": "Information",
        "System": "Warning",
        "Microsoft": "Warning"
      },
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760
    }
  },
  "Performance": {
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false,
    "CommandTimeout": 60,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30"
  },
  "Security": {
    "RequireHttps": true,
    "EnableCsrfProtection": true,
    "SessionTimeout": 60,
    "MaxRequestSize": 10485760
  },
  "Cache": {
    "DefaultExpiration": "00:15:00",
    "ProductsCacheExpiration": "00:05:00",
    "CategoriesCacheExpiration": "00:30:00"
  }
}

@model product_catalog_app.src.models.Category
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    
    // Header için parametreler
    ViewBag.HeaderType = "default";
    ViewBag.HeaderTitle = "Yeni Kategori Ekle";
    ViewBag.HeaderSubtitle = "Ürünlerinizi organize etmek için yeni bir kategori oluşturun";
    ViewBag.HeaderIcon = "fas fa-plus-circle";
    ViewBag.ShowBackButton = true;
    ViewBag.BackUrl = Url.Action("Index", "Category");
}


{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./data/products.db;Cache=Shared;Pooling=true"
  },
  "UseOptimizedServices": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
      "Microsoft.AspNetCore.ResponseCaching": "Warning",
      "Microsoft.AspNetCore.StaticFiles": "Warning",
      "product_catalog_app.src.filters.PerformanceLoggingFilter": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Cache": {
      "CategoriesExpirationMinutes": 30,
      "BrandsExpirationMinutes": 30,
      "SearchResultsExpirationMinutes": 5,
      "ProductCountExpirationMinutes": 10
    },
    "Performance": {
      "SlowRequestThresholdMs": 2000,
      "BulkOperationBatchSize": 500,
      "MaxPageSize": 200,
      "MaxConcurrentQueries": 10,
      "QueryTimeoutSeconds": 60,
      "ConnectionPoolSize": 128,
      "EnableQueryCompilation": true,
      "EnableBatchProcessing": true
    },
    "Pagination": {
      "DefaultPageSize": 50,
      "MaxPageSize": 200
    },
    "Validation": {
      "MaxImageUrlsPerProduct": 10,
      "MaxMarketplaceImagesPerProduct": 10
    }
  },
  "CacheSettings": {
    "DefaultExpirationMinutes": 30,
    "ShortExpirationMinutes": 5
  },
  "PerformanceSettings": {
    "SlowRequestThresholdMs": 1000,
    "EnablePerformanceLogging": true
  }
}
<!-- Kritik Inline CSS (optimized) -->
<style>
    /* Container override'ları azaltıldı */
    .product-form-container {
        width: 100%;
        max-width: 100%;
        padding: 24px;
        margin: 0 auto;
        border-radius: 0;
        box-shadow: none;
    }
    
    /* Form bölümleri düzenlendi */
    .form-section {
        display: block;
        margin-bottom: 32px;
        padding: 24px;
    }
    
    /* MEDIA TOGGLE FIX - High specificity */
    .media-additional.hidden,
    div.media-additional.hidden {
        display: none !important;
    }
    
    .media-additional:not(.hidden),
    div.media-additional:not(.hidden) {
        display: block !important;
    }
    
    /* KEYBOARD SHORTCUT INDICATOR */
    .keyboard-shortcut {
        display: inline-block;
        margin-left: 8px;
        padding: 2px 6px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 3px;
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.5px;
        opacity: 0.8;
        transition: opacity 0.2s ease;
    }
    
    /* FORM VALIDATION - Integrates with project notification system */
    .form-field-error {
        border: 2px solid #dc3545 !important;
        box-shadow: 0 0 0 0.1rem rgba(220, 53, 69, 0.25) !important;
        animation: errorPulse 0.3s ease-out;
    }
    
    .form-validation-message {
        margin-top: 4px;
        font-size: 13px;
        font-weight: 500;
        color: #dc3545;
        display: flex;
        align-items: center;
        gap: 6px;
    }
    
    @@keyframes errorPulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.02); }
        100% { transform: scale(1); }
    }
    
    .btn:hover .keyboard-shortcut {
        opacity: 1;
        background-color: rgba(255, 255, 255, 0.3);
    }
</style>

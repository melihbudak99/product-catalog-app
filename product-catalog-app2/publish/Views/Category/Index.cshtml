function closeEditModal() {
    console.log('ðŸ”’ closeEditModal Ã§aÄŸrÄ±ldÄ±');
    const modal = document.getElementById('quickEditModal');
    if (modal) {
        modal.classList.remove('show');
        modal.style.display = 'none';
        console.log('âœ… Modal kapatÄ±ldÄ±');
    }
    document.getElementById('quickEditForm').reset();
}

function submitQuickEdit(event) {
    console.log('ðŸ“ submitQuickEdit Ã§aÄŸrÄ±ldÄ±');
    event.preventDefault();
    
    const form = document.getElementById('quickEditForm');
    const formData = new FormData();
    
    const categoryId = document.getElementById('editCategoryId').value;
    const categoryName = document.getElementById('editCategoryName').value;
    const categoryDescription = document.getElementById('editCategoryDescription').value;
    
    console.log('ðŸ“ Form verileri:', { categoryId, categoryName, categoryDescription });
    
    formData.append('Id', categoryId);
    formData.append('Name', categoryName);
    formData.append('Description', categoryDescription);
    
    // Add anti-forgery token
    const token = document.querySelector('input[name="__RequestVerificationToken"]');
    if (token) {
        formData.append('__RequestVerificationToken', token.value);
        console.log('âœ… Anti-forgery token eklendi');
    } else {
        console.error('âŒ Anti-forgery token bulunamadÄ±');
    }

    console.log('ðŸŒ API Ã§aÄŸrÄ±sÄ± yapÄ±lÄ±yor...');
    
    fetch('/Category/QuickEdit', {
        method: 'POST',
        body: formData
    })
    .then(response => {
        console.log('ðŸŒ API yanÄ±tÄ± alÄ±ndÄ±:', response.status);
        return response.json();
    })
    .then(data => {
        console.log('ðŸ“Š API yanÄ±t verisi:', data);
        
        if (data.success) {
            alert('âœ… Kategori baÅŸarÄ±yla gÃ¼ncellendi!');
            closeEditModal();
            setTimeout(() => {
                location.reload();
            }, 500);
        } else {
            alert('âŒ ' + (data.message || 'GÃ¼ncelleme iÅŸlemi baÅŸarÄ±sÄ±z!'));
        }
    })
    .catch(error => {
        console.error('âŒ API hatasÄ±:', error);
        alert('âŒ Kategori gÃ¼ncellenirken hata oluÅŸtu!');
    });
}

function confirmDelete(categoryName) {
    return confirm(`"${categoryName}" kategorisini silmek istediÄŸinizden emin misiniz?\\n\\nBu iÅŸlem geri alÄ±namaz.`);
}

function refreshCategories() {
    const refreshBtn = document.querySelector('.btn-refresh');
    const icon = refreshBtn.querySelector('i');
    
    // Add loading animation
    icon.classList.add('fa-spin');

    }
    
    idInput.value = categoryId;
    nameInput.value = categoryName;
    descInput.value = categoryDescription || '';
    console.log('âœ… Form deÄŸerleri ayarlandÄ±');
    
    // Show modal with proper centering using the new .show class
    modal.style.display = 'flex';
    modal.classList.add('show');
    console.log('âœ… Modal gÃ¶sterildi ve ortaya hizalandÄ±');
    
    // Focus on name input
    setTimeout(() => {
        nameInput.focus();
        console.log('âœ… Input focus edildi');

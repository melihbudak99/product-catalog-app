        );
    } catch (error) {
        hideProgress();
        
        // Use critical notification for export errors
        window.notificationSystem.critical(
            'Dƒ±≈üa Aktarma Hatasƒ±', 
            `Export i≈ülemi ba≈üarƒ±sƒ±z: ${error.message}`
        );
    }
}

